<div class="banner" >
  <div class="container">
    <h1>Add a dose to <%= @cocktail.name %></h1>
  </div>
</div>
<div class="container">
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.association :ingredient, collection: @ingredients %>
    <%= f.input :amount %>
    <%= f.input :description %>
    <%= f.submit class:'btn btn-secondary' %>
    <%= link_to 'Back', cocktails_path, class:'ml-3' %>
  <% end %>
</div>
