<div class="container">
  <h1>Add a dose to <%= @cocktail.name %></h1>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.association :ingredient, collection: @ingredients %>
    <%= f.input :amount %>
    <%= f.input :description %>
    <%= f.submit class:'btn btn-primary' %>
    <%= link_to 'Back', cocktail_path(@cocktail) %>
  <% end %>
</div>
