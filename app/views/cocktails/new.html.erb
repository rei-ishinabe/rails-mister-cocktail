<div class="banner" >
  <div class="container">
    <h1>Add a new cocktail</h1>
  </div>
</div>
<div class="container">
  <%= simple_form_for @cocktail do |f| %>
    <%= f.input :name %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit class:'btn btn-outline-secondary btn-sm' %>
    <%= link_to 'Back', cocktails_path, class:'ml-3' %>
  <% end %>
</div>

