<div class="banner" >
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>
<div class="container">
  <% unless @cocktail.photo.file.nil? %>
    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  <% end %>
  <% @cocktail.doses.each do |dose| %>
    <p>
      <%= "#{dose.ingredient.name.capitalize} - #{dose.amount}, #{dose.description}" %>
      <%= link_to dose_path(dose), method:'delete' do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
    </p>
  <% end %>
  <p>
    <%= link_to new_cocktail_dose_path(@cocktail) do %>
    <i class="fas fa-plus"></i> Add a dose
    <% end %>
  </p>
  <p>
    <%= link_to cocktails_path do %>
      <i class="fas fa-undo"></i> Back home
    <% end %>
  </p>
</div>

