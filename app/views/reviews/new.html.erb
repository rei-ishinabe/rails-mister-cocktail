<div class="banner" >
  <div class="container">
    <h1>Review <%= @cocktail.name %></h1>
  </div>
</div>
<div class="container">
  <%= simple_form_for [@cocktail, @review] do |f| %>
    <%= f.input :comment %>
    <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
    <%= f.submit class:'btn btn-secondary btn-sm' %>
    <%= link_to 'Back', cocktails_path, class:'ml-3' %>
  <% end %>
</div>
